<Application x:Class="CombasLauncherApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CombasLauncherApp"
             xmlns:converters="clr-namespace:CombasLauncherApp.UI.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="UI/Resources/Colors.xaml"/>
                <ResourceDictionary Source="UI/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <converters:BooleanAndConverter x:Key="BooleanAndConverter"/>
            <converters:BooleanAndVisibilityConverter x:Key="BooleanAndVisibilityConverter"/>
            <converters:BooleanNandVisibilityConverter x:Key="BooleanNandVisibilityConverter"/>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>


    </Application.Resources>
</Application>
