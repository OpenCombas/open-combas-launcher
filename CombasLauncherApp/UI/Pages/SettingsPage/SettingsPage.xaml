<UserControl x:Class="CombasLauncherApp.UI.Pages.SettingsPage.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CombasLauncherApp.UI.Pages.SettingsPage" d:DataContext="{d:DesignInstance Type=local:SettingsPageViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid VerticalAlignment="Top">
        <StackPanel Grid.Column="0" Width="200" HorizontalAlignment="Left" Margin="4">
            <Button Content="Import Save File" Command="{Binding ImportSaveDataCommand}" Padding="8,0" Margin="4"/>
            <Button Content="Import Hound Pre-Builds" Command="{Binding ImportHoundPreBuildsCommand}" Padding="8,0" Margin="4"/>
            <Button Content="Import Hound Builds" Command="{Binding ImportHoundBuildsCommand}" Padding="8,0" Margin="4"/>
        </StackPanel>
    </Grid>
</UserControl>
