<UserControl x:Class="CombasLauncherApp.UI.Pages.HomePage.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CombasLauncherApp.UI.Pages.HomePage"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!-- Main Content -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.ColumnSpan="2" Margin="4">
            <TextBlock Text="Status" TextDecorations="Underline" FontWeight="Bold" FontSize="18" Foreground="{StaticResource MainForeground}"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ISO Extracted / Found : " Foreground="{StaticResource MainForeground}"/>
                <CheckBox IsEnabled="False" IsChecked="{Binding ChromeHoundsExtracted}" Foreground="{StaticResource MainForeground}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Install Complete : " Foreground="{StaticResource MainForeground}"/>
                <CheckBox IsEnabled="False" IsChecked="{Binding IsInstallComplete}" Foreground="{StaticResource MainForeground}"/>
            </StackPanel>

            <TextBlock Text="{Binding XeniaPath, StringFormat=Xenia Path : {0}}" Foreground="{StaticResource MainForeground}"/>

        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="1" Width="200" HorizontalAlignment="Left" Margin="4">
            <Button Content="Import Hound Pre-Builds" Command="{Binding ImportHoundPreBuildsCommand}">
                <Button.IsEnabled>
                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                        <Binding Path="ChromeHoundsExtracted"/>
                        <Binding Path="IsInstallComplete"/>
                        <Binding Path="IsXeniaFound"/>
                    </MultiBinding>
                </Button.IsEnabled>
            </Button>
            <Button Content="Import Hound Builds" Command="{Binding ImportHoundBuildsCommand}">
                <Button.IsEnabled>
                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                        <Binding Path="ChromeHoundsExtracted"/>
                        <Binding Path="IsInstallComplete"/>
                        <Binding Path="IsXeniaFound"/>
                    </MultiBinding>
                </Button.IsEnabled>
            </Button>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal">
            <ComboBox ItemsSource="{Binding MapPackList}" 
               SelectedItem="{Binding SelectedMapPack, Mode=TwoWay}"
               DisplayMemberPath="Key" VerticalContentAlignment="Center" FontSize="20" Margin="4">
                <ComboBox.IsEnabled>
                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                        <Binding Path="ChromeHoundsExtracted"/>
                        <Binding Path="IsInstallComplete"/>
                        <Binding Path="IsXeniaFound"/>
                    </MultiBinding>
                </ComboBox.IsEnabled>
            </ComboBox>
            <Button Content="Switch Map-Pack" FontSize="20" Command="{Binding SwitchMapPacksCommand}" Padding="8,0" Margin="4">
                <Button.IsEnabled>
                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                        <Binding Path="ChromeHoundsExtracted"/>
                        <Binding Path="IsInstallComplete"/>
                        <Binding Path="IsXeniaFound"/>
                    </MultiBinding>
                </Button.IsEnabled>
            </Button>
            <Button Width="100" Height="60" FontSize="20" Content="Launch" Command="{Binding LaunchXeniaCommand}" Padding="8,0"  Margin="4">
                <Button.Visibility>
                    <MultiBinding Converter="{StaticResource BooleanAndVisibilityConverter}">
                        <Binding Path="ChromeHoundsExtracted"/>
                        <Binding Path="IsInstallComplete"/>
                        <Binding Path="IsXeniaFound"/>
                    </MultiBinding>
                </Button.Visibility>
            </Button>
            <Button Width="120" Height="60" FontSize="20" Content="Run Setup" Command="{Binding RunSetupCommand}" Padding="8,0"  Margin="4">
                <Button.Visibility>
                    <MultiBinding Converter="{StaticResource BooleanNandVisibilityConverter}">
                        <Binding Path="ChromeHoundsExtracted"/>
                        <Binding Path="IsInstallComplete"/>
                        <Binding Path="IsXeniaFound"/>
                    </MultiBinding>
                </Button.Visibility>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
