<UserControl x:Class="CombasLauncherApp.UI.Pages.HomePage.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CombasLauncherApp.UI.Pages.HomePage"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance local:HomePageViewModel}">
    <!-- Main Content -->
    <Grid HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>

     
        <Grid Grid.Column="0" Grid.Row="2" Background="{StaticResource OverlayBackground}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
           
                <ComboBox ItemsSource="{Binding MapPackList}" 
                          SelectedItem="{Binding SelectedMapPack, Mode=TwoWay}"
                          DisplayMemberPath="Key" VerticalContentAlignment="Center" FontSize="20" Margin="4" >
                    <ComboBox.IsEnabled>
                        <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                            <Binding Path="ChromeHoundsExtracted"/>
                            <Binding Path="IsInstallComplete"/>
                            <Binding Path="IsXeniaFound"/>
                        </MultiBinding>
                    </ComboBox.IsEnabled>
                </ComboBox>
                <Button Width="100" Height="60" FontSize="20" Content="Launch" Command="{Binding LaunchXeniaCommand}" Padding="8,0"  Margin="4">
                    <Button.Visibility>
                        <MultiBinding Converter="{StaticResource BooleanAndVisibilityConverter}">
                            <Binding Path="ChromeHoundsExtracted"/>
                            <Binding Path="IsInstallComplete"/>
                            <Binding Path="IsXeniaFound"/>
                        </MultiBinding>
                    </Button.Visibility>
                </Button>
                <Button Width="120" Height="60" FontSize="20" Content="Run Setup" Command="{Binding RunInitialSetupCommand}" Padding="8,0"  Margin="4">
                    <Button.Visibility>
                        <MultiBinding Converter="{StaticResource BooleanNandVisibilityConverter}">
                            <Binding Path="ChromeHoundsExtracted"/>
                            <Binding Path="IsInstallComplete"/>
                            <Binding Path="IsXeniaFound"/>
                        </MultiBinding>
                    </Button.Visibility>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
