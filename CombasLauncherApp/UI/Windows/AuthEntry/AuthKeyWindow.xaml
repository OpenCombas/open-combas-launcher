<Window x:Class="CombasLauncherApp.UI.Windows.AuthEntry.AuthKeyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CombasLauncherApp.UI.Windows.AuthEntry"
        mc:Ignorable="d"
        Title="Enter Auth Key" Height="155" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBlock Text="Enter your Tailscale Auth Key:" Margin="0,0,0,10"/>
        <PasswordBox x:Name="AuthKeyBox" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Margin="0,0,10,0" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Cancel" Width="75" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>