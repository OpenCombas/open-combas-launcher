<Window x:Class="CombasLauncherApp.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CombasLauncherApp" xmlns:ui="clr-namespace:CombasLauncherApp.UI"
        xmlns:homePage="clr-namespace:CombasLauncherApp.UI.Pages.HomePage"
        xmlns:developerPages="clr-namespace:CombasLauncherApp.UI.Pages.DeveloperPages"
        xmlns:settingsPage="clr-namespace:CombasLauncherApp.UI.Pages.SettingsPage"
        xmlns:helix="http://helix-toolkit.org/wpf"
        mc:Ignorable="d"
        Title="{Binding Version}" Height="500" Width="700" ResizeMode="NoResize" Background="{StaticResource MainBackground}" d:DataContext="{d:DesignInstance ui:MainWindowViewModel}">
    
    <!-- Window Resources, primarily navigation templates for the content presenter -->
    <Window.Resources>
        <DataTemplate DataType="{x:Type homePage:HomePageViewModel}">
            <homePage:HomePage />
        </DataTemplate>
        <Storyboard x:Key="ShieldSpinStoryboard" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ShieldRotation"
                                           Storyboard.TargetProperty="Angle">
                <LinearDoubleKeyFrame Value="30" KeyTime="0:0:8"/>
                <LinearDoubleKeyFrame Value="-30" KeyTime="0:0:24"/>
                <LinearDoubleKeyFrame Value="0" KeyTime="0:0:32"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
      
    </Window.Resources>
    
    
    <Grid  Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Bar -->
        <Grid Grid.Row="0" Background="{StaticResource OverlayBackground}">
            <StackPanel Orientation="Horizontal" Margin="4" HorizontalAlignment="Right">
                <Button Content="{DynamicResource LOC_Status}" Padding="4" Command="{Binding OpenStatusPageCommand}" Margin="4,0,0,0"/>
                <Button Content="{DynamicResource LOC_Developer_Menu}" Padding="4" Command="{Binding OpenDeveloperMenuCommand}" Visibility="{Binding IsDeveloperAllowed, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="4,0,0,0"/>
                <Button Content="{DynamicResource LOC_Settings}" Padding="4" Command="{Binding OpenSettingsPageCommand}" IsEnabled="{Binding IsInstallComplete}" Margin="4,0,0,0"/>
            </StackPanel>
        </Grid>
        <helix:HelixViewport3D  Grid.Row="1" ShowViewCube="False" IsEnabled="False">
            <helix:HelixViewport3D.Camera>
                <PerspectiveCamera Position="0,34,0" LookDirection="0,-1,0" UpDirection="0,0,-1" FieldOfView="60" />
            </helix:HelixViewport3D.Camera>
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <DirectionalLight Color="White" Direction="0,-1,1"/>
                </ModelVisual3D.Content>
            </ModelVisual3D> 
            <!-- Debug Gridlines -->
            <!--<helix:GridLinesVisual3D Center="0,0,0"
                                     Length="50"
                                     Width="50"
                                     MinorDistance="1"
                                     MajorDistance="5"
                                     Thickness="0.1"
                                     Fill="Black">
                <helix:GridLinesVisual3D.Transform>
                    <RotateTransform3D>
                        <RotateTransform3D.Rotation>
                            <AxisAngleRotation3D Axis="1,0,0" Angle="90"/>
                        </RotateTransform3D.Rotation>
                    </RotateTransform3D>
                </helix:GridLinesVisual3D.Transform>
            </helix:GridLinesVisual3D>-->
           
            <ModelVisual3D Content="{Binding SceneModel}">
                <ModelVisual3D.Transform>
                    <Transform3DGroup>
                        <TranslateTransform3D OffsetX="-25.5" OffsetY="0" OffsetZ="38"/>
                        <RotateTransform3D>
                            <RotateTransform3D.Rotation >
                                <AxisAngleRotation3D x:Name="ShieldRotation" Axis="0,0,1" Angle="0"/>
                            </RotateTransform3D.Rotation>
                        </RotateTransform3D>
                    </Transform3DGroup>
                </ModelVisual3D.Transform>
            </ModelVisual3D>
            <helix:HelixViewport3D.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                    <BeginStoryboard Storyboard="{StaticResource ShieldSpinStoryboard}" />
                </EventTrigger>
            </helix:HelixViewport3D.Triggers>
           
        </helix:HelixViewport3D>
    
        <!-- Main Navigation Content -->
        <ContentPresenter Grid.Row="2" Content="{Binding CurrentPage}"/> 

        <!-- Footer Bar -->
        <Grid Grid.Row="3" Background="{StaticResource OverlayBackground}">
            <StackPanel Orientation="Horizontal" >
             
            </StackPanel>
        </Grid>


        <!-- Settings Overlay -->
        <Grid Grid.Row="1" x:Name="SettingsOverlay"
              Visibility="{Binding IsSettingsOpen, Converter={StaticResource BooleanToVisibilityConverter}}"
              Panel.ZIndex="200">
            <settingsPage:SettingsPage DataContext="{Binding SettingsPageViewModel}" />
        </Grid>

        <!-- Status Overlay -->
        <Grid Grid.Row="1" x:Name="StatusOverlay" VerticalAlignment="Top"
              Visibility="{Binding IsStatusOpen, Converter={StaticResource BooleanToVisibilityConverter}}"
              Panel.ZIndex="200">
            <StackPanel Grid.ColumnSpan="2" Margin="4">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{DynamicResource LOC_ISO_Extracted_Label}" Foreground="{StaticResource MainForeground}"/>
                    <CheckBox IsEnabled="False" IsChecked="{Binding ChromeHoundsExtracted}" Foreground="{StaticResource MainForeground}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{DynamicResource LOC_Install_Complete_Label}" Foreground="{StaticResource MainForeground}"/>
                    <CheckBox IsEnabled="False" IsChecked="{Binding IsInstallComplete}" Foreground="{StaticResource MainForeground}"/>
                </StackPanel>

                <TextBlock Foreground="{StaticResource MainForeground}">
                    <Run Text="{DynamicResource LOC_Xenia_Path_Label}" />
                    <Run Text="{Binding XeniaPath}" />
                </TextBlock>

            </StackPanel>
        </Grid>


        <!-- Developer Menu Overlay -->
        <Grid Grid.Row="1" x:Name="DeveloperMenuOverlay" Background="{StaticResource MainBackground}"
              Visibility="{Binding IsDeveloperMenuOpen, Converter={StaticResource BooleanToVisibilityConverter}}"
              Panel.ZIndex="200">
            <developerPages:DeveloperHomePage DataContext="{Binding DeveloperHomePageViewModel}"/>
        </Grid>

        <!-- Pulsing Loading Overlay -->
        <Grid Grid.Row="0" Grid.RowSpan="3" x:Name="LoadingOverlay"
              Background="#80000000"
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
              Panel.ZIndex="1000">
            <TextBlock Text="{DynamicResource LOC_Loading_Message}"
                       Foreground="White"
                       FontSize="36"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <TextBlock.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="1.0" To="0.3"
                                                 Duration="0:0:0.8"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </TextBlock.Triggers>
            </TextBlock>
        </Grid>
    </Grid>
</Window>
