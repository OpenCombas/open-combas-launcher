<Window x:Class="CombasLauncherApp.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CombasLauncherApp" xmlns:ui="clr-namespace:CombasLauncherApp.UI"
        xmlns:homePage="clr-namespace:CombasLauncherApp.UI.Pages.HomePage"
        xmlns:developerPages="clr-namespace:CombasLauncherApp.UI.Pages.DeveloperPages"
        xmlns:settingsPage="clr-namespace:CombasLauncherApp.UI.Pages.SettingsPage"
        mc:Ignorable="d"
        Title="{Binding Version}" Height="450" Width="800" Background="{StaticResource MainBackground}" d:DataContext="{d:DesignInstance ui:MainWindowViewModel}">
    
    <!-- Window Resources, primarily navigation templates for the content presenter -->
    <Window.Resources>
        <DataTemplate DataType="{x:Type homePage:HomePageViewModel}">
            <homePage:HomePage />
        </DataTemplate>
    </Window.Resources>
    
    
    <Grid  Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Bar -->
        <Grid Grid.Row="0" HorizontalAlignment="Right">
            <StackPanel Orientation="Horizontal">
                <Button Content="Status" Padding="4" Command="{Binding OpenStatusPageCommand}" Margin="4,0"/>
                <Button Content="Developer Menu" Padding="4" Command="{Binding OpenDeveloperMenuCommand}" Margin="4,0"/>
                <Button Content="Settings" Padding="4" Command="{Binding OpenSettingsPageCommand}" IsEnabled="{Binding IsInstallComplete}"/>
            </StackPanel>
        </Grid>

        <!-- Main Navigation Content -->
        <ContentPresenter Grid.Row="1" Content="{Binding CurrentPage}"/> 

        <!-- Footer Bar -->
        <Grid Grid.Row="2">
            <StackPanel Orientation="Horizontal">
             
            </StackPanel>
        </Grid>


        <!-- Settings Overlay -->
        <Grid Grid.Row="1" x:Name="SettingsOverlay"
              Background="{StaticResource MainBackground}"
              Visibility="{Binding IsSettingsOpen, Converter={StaticResource BooleanToVisibilityConverter}}"
              Panel.ZIndex="200">
            <settingsPage:SettingsPage DataContext="{Binding SettingsPageViewModel}" />
        </Grid>

        <!-- Status Overlay -->
        <Grid Grid.Row="1" x:Name="StatusOverlay" VerticalAlignment="Top"
              Background="{StaticResource MainBackground}"
              Visibility="{Binding IsStatusOpen, Converter={StaticResource BooleanToVisibilityConverter}}"
              Panel.ZIndex="200">
            <StackPanel Grid.ColumnSpan="2" Margin="4">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ISO Extracted / Found : " Foreground="{StaticResource MainForeground}"/>
                    <CheckBox IsEnabled="False" IsChecked="{Binding ChromeHoundsExtracted}" Foreground="{StaticResource MainForeground}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Install Complete : " Foreground="{StaticResource MainForeground}"/>
                    <CheckBox IsEnabled="False" IsChecked="{Binding IsInstallComplete}" Foreground="{StaticResource MainForeground}"/>
                </StackPanel>

                <TextBlock Text="{Binding XeniaPath, StringFormat=Xenia Path : {0}}" Foreground="{StaticResource MainForeground}"/>

            </StackPanel>
        </Grid>


        <!-- Developer Menu Overlay -->
        <Grid Grid.Row="1" x:Name="DeveloperMenuOverlay" Background="{StaticResource MainBackground}"
              Visibility="{Binding IsDeveloperMenuOpen, Converter={StaticResource BooleanToVisibilityConverter}}"
              Panel.ZIndex="200">
            <developerPages:DeveloperHomePage DataContext="{Binding DeveloperHomePageViewModel}"/>
        </Grid>

        <!-- Pulsing Loading Overlay -->
        <Grid Grid.Row="0" Grid.RowSpan="3" x:Name="LoadingOverlay"
              Background="#80000000"
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
              Panel.ZIndex="1000">
            <TextBlock Text="Loading..."
                       Foreground="White"
                       FontSize="36"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <TextBlock.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="1.0" To="0.3"
                                                 Duration="0:0:0.8"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </TextBlock.Triggers>
            </TextBlock>
        </Grid>
    </Grid>
</Window>
